<?xml version="1.0" encoding="utf-8" ?>
<odoo noupdate="1">
    <record model="ir.module.category" id="module_category_pettycash">
        <field name="name">Pettycash</field>
        <field name="description">Manage Pettycash</field>
        <field name="sequence">17</field>
    </record>
    <record id="group_pettycash_user" model="res.groups">
        <field name="name">Users</field>
        <field name="category_id" ref="module_category_pettycash" />
    </record>
    <record id="group_pettycash_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_pettycash" />
        <field
            name="users"
            eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
    </record>
    <!-- Company-restricted Records -->
    <record model="ir.rule" id="asft_pettycash_rule_company">
        <field name="name">pettycash: multi-company</field>
        <field name="model_id" ref="model_asft_pettycash" />
        <field name="global" eval="True" />
        <field name="domain_force">
            ['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]
        </field>
    </record>
    <record model="ir.rule" id="asft_pettycash_type_rule_company">
        <field name="name">pettycash type: multi-company</field>
        <field name="model_id" ref="model_asft_pettycash_type" />
        <field name="global" eval="True" />
        <field name="domain_force">
            ['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]
        </field>
    </record>
    <record model="ir.rule" id="asft_pettycash_expense_rule_company">
        <field name="name">pettycash expense type: multi-company</field>
        <field name="model_id" ref="model_asft_pettycash_expense" />
        <field name="global" eval="True" />
        <field name="domain_force">
            ['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]
        </field>
    </record>
</odoo>
